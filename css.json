body {
  margin: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  color: #333;
  background-color: #f9f9f9;
}

/* ===== HEADER & NAV ===== */
header {
  background-color: #0a4b8b;
  color: white;
  padding: 1em 0;
}

nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  margin: auto;
}

.logo {
  font-size: 1.5em;
  font-weight: bold;
}

.nav-links {
  list-style: none;
  display: flex;
  gap: 1em;
}

.nav-links a {
  color: white;
  text-decoration: none;
  font-weight: 500;
}

.nav-links a:hover {
  text-decoration: underline;
}

/* ===== MENU TOGGLE ===== */
.menu-toggle {
  display: none;
  cursor: pointer;
  font-size: 1.8rem;
}

@media (max-width: 768px) {
  .menu-toggle {
    display: block;
  }

  .nav-links {
    display: none;
    flex-direction: column;
    text-align: center;
    background-color: #0a4b8b;
    width: 100%;
    padding: 1em 0;
  }

  .nav-links.active {
    display: flex;
  }
}

/* ===== HERO SECTION ===== */
.hero {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  background-color: #0a4b8b;
  color: white;
  padding: 3em 1em;
}

.hero-content {
  max-width: 500px;
  opacity: 0;
  transform: translateY(20px);
  transition: all 1s ease;
}

.hero-content.visible {
  opacity: 1;
  transform: translateY(0);
}

.tagline {
  font-size: 1.2em;
  margin: 0.5em 0;
}

.profile-pic {
  width: 180px;
  height: 180px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid white;
}

/* ===== CONTENT SECTIONS ===== */
.about, .services, .gallery, .contact {
  padding: 3em 1em;
  text-align: center;
  background-color: white;
  margin-top: 1em;
}

.service-grid, .gallery-grid {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 1.5em;
  margin-top: 2em;
  padding: 0 1em;
}

